{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "sourceMap": true,
    "declarationDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "public",
    "src/__tests__",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx"
  ]
}
